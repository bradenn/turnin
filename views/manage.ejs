<!doctype html>
<html lang="en">
<%- include("partials/header.ejs") %>
<%- include("partials/nav.ejs") %>

<body class="preload">
<div class="container-fluid pl-0 pr-0">
    <div class="row no-gutters">
        <div class="col-md-2 pr-2">
            <%- include("partials/sidebar.ejs") %>
        </div>
        <div class="col-md-10">
            <div class="container-fluid">
                <%
                let buttons = [` <a class="" data-toggle="modal" href="#newClass"><i class="fas fa-plus"></i>&nbsp;New Course</a>`]
                %>
                <%- include("partials/title.ejs", {title: "Manage", subtitle: `Admin managment`,
                buttons: [], backName: "Home", backLink: "/"}) %>
                <div class="row">

                    <div class="col-10">
                        <div style="border: var(--border); border-radius: var(--border-radius);">
                            <ul class="nav nav-tabs justify-content-between">
                                <ul class="nav">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="pill" href="#students" role="tab">Students</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="pill" href="#instructors"
                                           role="tab">Instructors</a>
                                    </li>
                                    <li class="nav-item navbar-text" style="font-weight: 700;">
                                        |
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="pill" href="#courses"
                                           role="tab">Courses</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="pill" href="#assignments"
                                           role="tab">Assignments</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="pill" href="#files"
                                           role="tab">Files</a>
                                    </li>
                                    <li class="nav-item navbar-text" style="font-weight: 700;">
                                        |
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="pill" href="#institution"
                                           role="tab">Institution</a>
                                    </li>

                                </ul>
                            </ul>
                            <div class="tab-content card"
                                 style="border: none; border-top-left-radius: 0; border-top-right-radius: 0;"
                                 id="v-pills-tabContent">
                                <div class="tab-pane show active" id="students" role="tabpanel"
                                     aria-labelledby="v-pills-profile-tab">
                                    <div class="card-title">Students</div>
                                    <div class="card-subtitle">There are <%= students.length %> students</div>
                                    <div class="table-responsive">
                                        <table class="table ">
                                            <thead class="">
                                            <tr>
                                                <th scope="col">Name</th>
                                                <th scope="col">Username</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Github</th>
                                                <th scope="col">Options</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <% students.forEach(target => { %>
                                                <tr>
                                                    <td><%= target.firstname %> <%= target.lastname %></td>
                                                    <td><%= target.username %></td>
                                                    <td><%= target.email %></td>
                                                    <td><%= target.github %></td>
                                                    <td>Edit</td>
                                                </tr>
                                            <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="courses" role="tabpanel"
                                     aria-labelledby="v-pills-messages-tab">
                                    <div class="card-title">Courses</div>
                                    <div class="card-subtitle">There are <%= courses.length %> courses.</div>
                                    <div class="table-responsive">
                                        <table class="table ">
                                            <thead class="">
                                            <tr>
                                                <th scope="col">Name</th>
                                                <th scope="col">Section</th>
                                                <th scope="col">Instructor</th>
                                                <th scope="col">Options</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <% courses.forEach(target => { %>
                                                <tr>
                                                    <td><%= target.name %></td>
                                                    <td><%= target.section %></td>
                                                    <td><%= target.instructor.firstname %> <%= target.instructor.lastname %></td>
                                                    <td><%= target.students %></td>
                                                    <td>Edit</td>
                                                </tr>
                                            <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="assignments" role="tabpanel"
                                     aria-labelledby="v-pills-messages-tab">
                                    <div class="card-title">Assignments</div>
                                    <div class="card-subtitle">There are <%= assignments.length %> assignments.</div>
                                    <div class="table-responsive">
                                        <table class="table ">
                                            <thead class="">
                                            <tr>
                                                <th scope="col">Name</th>
                                                <th scope="col">Section</th>
                                                <th scope="col">Instructor</th>
                                                <th scope="col">Options</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <% assignments.forEach(target => { %>
                                                <tr>
                                                    <td><%= target.name %></td>
                                                    <td><%= target.course %></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td>Edit</td>
                                                </tr>
                                            <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <div class="tab-pane fade" id="files" role="tabpanel"
                                     aria-labelledby="v-pills-messages-tab">
                                    <% let size = 0;
                                        files.forEach(file => {
                                            size+=(file.content.length >= 1)?file.content.reduce((a, b) => a + b).length:0
                                        });
                                     %>
                                    <div class="card-title">Files</div>
                                    <div class="card-subtitle">There are <%= files.length %> files using <%= bytesToSize(size) %> of disk space</div>
                                    <div class="table-responsive">
                                        <table class="table ">
                                            <thead class="">
                                            <tr>
                                                <th scope="col">Name</th>
                                                <th scope="col">Section</th>
                                                <th scope="col">Size</th>
                                                <th scope="col">Options</th>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            <% files.forEach(target => {
                                                let cache = (target.content.length >= 1)?target.content.reduce((a, b) => a + b).length:0;
                                                size+=cache;
                                            %>
                                                <tr>
                                                    <td><%= target.name %></td>
                                                    <td><%= target.student %></td>
                                                    <td><%= bytesToSize(cache) %></td>
                                                    <td></td>
                                                    <td>Edit</td>
                                                </tr>
                                            <% }); %>
                                            <%
                                            function bytesToSize(bytes) {
                                                const sizes = ['Bytes', 'KB', 'MB', 'GB', 'TB']
                                                if (bytes === 0) return '0 B'
                                                const i = parseInt(Math.floor(Math.log(bytes) / Math.log(1024)), 10)
                                                if (i === 0) return `${bytes} ${sizes[i]}`
                                                return `${(bytes / (1024 ** i)).toFixed(1)} ${sizes[i]}`
                                            }
                                            %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="instructors" role="tabpanel"
                                     aria-labelledby="v-pills-messages-tab">
                                    <div class="card-title">Instructors</div>
                                    <div class="card-subtitle">There are <%= instructors.length %> instructors.</div>
                                    <div class="table-responsive">
                                        <table class="table ">
                                            <thead class="">
                                            <tr>
                                                <th scope="col">Name</th>
                                                <th scope="col">Username</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Github</th>
                                                <th scope="col">Options</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <% instructors.forEach(target => { %>
                                                <tr>
                                                    <td><%= target.firstname %> <%= target.lastname %></td>
                                                    <td><%= target.username %></td>
                                                    <td><%= target.email %></td>
                                                    <td><%= target.github %></td>
                                                    <td>Edit</td>
                                                </tr>
                                            <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="institution" role="tabpanel"
                                     aria-labelledby="v-pills-settings-tab">
                                    ...
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
</body>
</html>
