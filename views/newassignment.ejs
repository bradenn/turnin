<html>
<%- include("partials/header.ejs") %>
<%- include("partials/nav.ejs") %>

<body>
<div class="container">
    <%
    let buttons = [` `];
    %>
    <%- include("partials/title.ejs", {title: "New Assignment", subtitle: `Instructor ${ user.firstname } ${ user.lastname }`,
    buttons: buttons, backName: "Courses", backLink: "/courses"}); %>
    <div class="row">
        <div class="col-6">
            <form action="/assignments/new" method="post">
                <div class="form-group">
                    <label>Assignment name</label>
                    <input type="text" class="form-control" name="assignmentName" placeholder="Name">
                    <small class="text-muted">Duplicate names are allowed but not recommended.</small>
                </div>
                <div class="form-group">
                    <label>Course</label>
                    <select class="form-control" name="assignmentClass">
                        <% courses.forEach(function(course){ %>
                            <option value="<%= course._id %>"><%= course.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label>Make command</label>
                    <input type="text" class="form-control" name="makeCommand" placeholder="g++ lab1.cpp">
                    <small class="text-muted">Can be any bash/zsh command</small>
                </div>
                <div class="form-group">
                    <label>File Names</label>
                    <input type="text" class="form-control" name="assignmentFiles" placeholder="Files">
                    <small class="text-muted">Separate multiple with comma, ie. lab1.cpp, lab1b.cpp</small>
                </div>
                <div class="form-group">
                    <label>Due date</label>
                    <input type="date" class="form-control" name="assignmentDueDate" placeholder="Date">
                    <small class="text-muted">Late assignments will be accepted but flagged as late</small>
                </div>
                <div class="form-group">
                    <label>Late due date</label>
                    <input type="date" class="form-control" name="assignmentLateDueDate" placeholder="Date">
                    <small class="text-muted">Absolute cutoff for assignments</small>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Continue to tests</button>
                    <br>
                    <small class="text-muted">You can preview your assignment (and assign) from the Assignments
                        page.</small>
                </div>

            </form>


        </div>
    </div>
</div>
</body>
<%- include("partials/footer.ejs") %>
</html>
