<!DOCTYPE html>
<html lang="en" <% if(user != null){ %>data-theme="<%= user.theme %>" <% }else{ %> data-theme="dark" <% } %>>
<%- include("partials/header.ejs"); %>

<body>
  <%- include("partials/nav.ejs"); %>
  <div class="container" style="margin-top:32px;">
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-head">
            <span class="card-head-title">Basic Settings</span>
          </div>
          <div class="card-body">
            <div class="form-element">
              <div class="form-group form-group-block">
                <label class="form-nomargin">Email</label>
                <small class="form-text text-muted form-nomargin"><%= user.email %></small>
              </div>
              <div class="form-group form-group-block float-right">
                <a href="#" class="btn btn-primary" class="btn btn-primary" data-toggle="modal" data-target="#emailModal">Change</a>
              </div>
            </div>
            <div class="form-element">
              <div class="form-group form-group-block">
                <label class="form-nomargin">Password</label>
                <small class="form-text text-muted form-nomargin">You can change your password here</small>
              </div>
              <div class="form-group form-group-block float-right">
                <a href="#" class="btn btn-primary" class="btn btn-primary" data-toggle="modal" data-target="#passwordModal">Change</a>
              </div>
            </div>
            <div class="form-element">
              <form action="/picture/image-upload" method="post" enctype="multipart/form-data">
                <div class="form-group form-group-block">
                  <label class="form-nomargin">Profile Picture</label>
                  <small class="form-text text-muted form-nomargin">What others see on your profile.</small>

                  <div class="input-group">

                    <div class="custom-file">
                      <input type="file" class="custom-file-input" id="image" name="image">
                      <label class="custom-file-label" for="inputGroupFile02">Choose file</label>
                    </div>

                  </div>
                </div>
                <div class="form-group form-group-block float-right">
                  <button type="submit" href="#" class="btn btn-primary">Upload</button>
                </div>
              </form>
            </div>




          </div>
        </div>
      </div>

      <br>
    </div>
  </div>
</body>

</html>
